<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_margin="14dp"
    android:id="@+id/cardViewDoctorR"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    android:background="#B0f6c5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CFF4DA"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/iconappointment"
            android:layout_marginTop="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNumeDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSpecializareDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/colorText"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:textSize="17sp"
                    android:text="@string/day"
                    android:textColor="@color/colorText"/>

                <TextView
                    android:id="@+id/tvDataProgramare"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="date"
                    android:paddingStart="17dp"
                    android:layout_marginTop="3dp"
                    android:textSize="17sp"
                    android:text="3"
                    android:textColor="@color/gray1"/>

                <TextView
                    android:id="@+id/tvZiuaProgramare"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="date"
                    android:paddingStart="5dp"
                    android:layout_marginTop="3dp"
                    android:textSize="17sp"
                    android:text="Tue"
                    android:textColor="@color/gray1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:textSize="17sp"
                    android:paddingStart="10dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/timee"
                    android:textColor="@color/colorText"/>
                <TextView
                    android:id="@+id/tvOraProgramare"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="date"
                    android:paddingStart="5dp"
                    android:layout_marginTop="3dp"
                    android:textSize="17sp"
                    android:textColor="@color/gray1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textSize="17sp"
                    android:text="Consultation fizic"
                    android:textColor="@color/colorText"/>

                <TextView
                    android:id="@+id/tvLocatie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingStart="4dp"
                    android:textSize="17sp"
                    android:text="Consultation fizic"
                    android:textColor="@color/colorText"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnAnulareProgramareFizic"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5sp"
                android:background="@drawable/border_sqr"
                android:layout_marginBottom="5sp"
                android:backgroundTint="@color/green2"
                android:text="Cancel"
                android:textColor="@color/colorText"
                android:textAlignment="center"
                android:textSize="10sp"/>

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>